<%- include('../partials/mainhead') %>
<div class="d-flex flex-column vh-100 overflow-hidden">
    
    <%- include('../partials/navbar') %>

    <div class="flex-grow-1 d-flex align-items-center justify-content-center p-3">

        <div class="center-card card">
            <div class="card-body p-4">
                <h1 class="h4 mb-4 text-black">Forgot Password</h1>
                
                <div id="authMessage" class="alert alert-danger d-none mb-2"></div>
                
                <form action="/forgotpassword" method="POST" id="forgotPasswordForm">
                    <div class="mb-3">
                        <label for="emailInput" class="form-label text-black">Email address</label>
                        <input type="email" class="form-control" id="emailInput" name="emailuser"
                            placeholder="Enter your registered email" required>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit"
                            style="background-color: #8754ff; border-color:#8754ff;">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <%- include('../partials/footer') %>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const errorMsg = urlParams.get('error');
        const authMessageDiv = document.getElementById('authMessage');

        if (errorMsg) {
            authMessageDiv.textContent = errorMsg;
            authMessageDiv.classList.remove('d-none'); // Show the alert
        }
    </script>

</div>
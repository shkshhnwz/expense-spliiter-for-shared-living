<%- include('../partials/mainhead') %>
<%- include('../partials/navbar') %>
<div class="min-vh-100 d-flex flex-column align-items-center justify-content-center p-3">
    <div class="center-card card">
        <div class="card-body p-4">
            <h1 class="h4 mb-4 text-black">Sign Up</h1>
            <form action="/register" method="post">
                <div class="mb-3">
                    <label for="nameInput" class="form-label text-black">Name</label>
                    <input type="text" name="NameUser" id="nameUser" placeholder="Enter your name" class="form-control"
                        required>
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label text-black">Email address</label>
                    <input type="email" class="form-control" id="emailInput" class="form-control" name="emailuser"
                        placeholder="Enter your email" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label text-black">Enter your phone number</label>
                    <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                        placeholder="123-456-7890" required autocomplete="tel" class="form-control" inputmode="numeric">
                </div>
                <div class="mb-4">
                    <label for="inputPassword" class="form-label text-black">Password</label>
                    <input type="password" class="form-control" id="inputPassword" name="passworduser"
                        placeholder="Enter your password" required>
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary" type="submit" style="background-color: #8754ff; border-color:#8754ff;">Sign Up</button>
                </div>
            </form>
        </div>
    </div>

<%- include('../partials/otherloginopt') %>
</div>
<%- include('../partials/footer') %>
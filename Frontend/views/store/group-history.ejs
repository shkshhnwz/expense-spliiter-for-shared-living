<%- include('../partials/mainhead') %>
<%- include('../partials/navbar') %>

<div class="container py-4 py-sm-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-9">
      <h2 class="inter-header text-center mb-5">Groups You're In</h2>

      <% if (groups && groups.length > 0) { %>
        <div class="row g-3">
          <% groups.forEach((group, index) => { %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card shadow-sm group-card h-100">
                <div class="card-header text-white bg-purple text-center">
                  <h5 class="mb-0"><%= group.name %></h5>
                </div>
                <div class="card-body d-flex flex-column">
                  <p class="text-muted mb-2">
                    <strong>Type:</strong> <%= group.type %>
                  </p>
                  <p class="text-muted mb-2">
                    <strong>Members:</strong> <%= group.members.length %>
                  </p>
                  <% if (group.budget) { %>
                    <p class="text-muted mb-3">
                      <strong>Budget:</strong> â‚¹<%= group.budget.toFixed(2) %>
                    </p>
                  <% } %>
                  <div class="mt-auto d-flex gap-2">
                    <a href="/dashboard/group/<%= group._id %>" class="btn btn-sm btn-outline-primary flex-grow-1">View</a>
                    <a href="/dashboard/group/<%= group._id %>/edit" class="btn btn-sm btn-outline-secondary flex-grow-1">Edit</a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="alert alert-info text-center" role="alert">
          <h5>No Groups Yet</h5>
          <p>You haven't created or joined any groups. <a href="/dashboard/group" class="alert-link">Create a new group</a> to get started!</p>
        </div>
      <% } %>

      <div class="d-grid gap-2 mt-5">
        <a href="/dashboard/group" class="btn btn-primary btn-lg">Create New Group</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
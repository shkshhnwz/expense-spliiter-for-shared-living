<%- include('../partials/mainhead') %>
<%- include('../partials/navbar') %>

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-dark fw-bold">Income History</h2>
            <p class="text-muted">Track all your past earnings</p>
        </div>
        <a href="/dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <% if (incomeList && incomeList.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3">Source</th>
                                <th class="py-3">Description</th>
                                <th class="py-3">Date Received</th>
                                <th class="py-3 text-end pe-4">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% incomeList.forEach(income => { %>
                                <tr>
                                    <td class="ps-4">
                                        <% 
                                            let badgeClass = 'bg-secondary';
                                            if(income.incomeSource === 'Salary') badgeClass = 'bg-primary';
                                            if(income.incomeSource === 'Freelance') badgeClass = 'bg-info text-dark';
                                            if(income.incomeSource === 'BusinessProfit') badgeClass = 'bg-success';
                                            if(income.incomeSource === 'Rental') badgeClass = 'bg-warning text-dark';
                                        %>
                                        <span class="badge <%= badgeClass %> rounded-pill">
                                            <%= income.incomeSource %>
                                        </span>
                                    </td>
                                    <td class="text-muted">
                                        <%= income.description ? income.description : 'No description provided' %>
                                    </td>
                                    <td>
                                        <i class="far fa-calendar-alt text-muted me-2"></i>
                                        <%= new Date(income.dateReceived).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                    </td>
                                    <td class="text-end pe-4 fw-bold text-success">
                                        + â‚¹<%= income.amount.toFixed(2) %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-3 text-muted">
                        <i class="fas fa-search-dollar fa-3x opacity-25"></i>
                    </div>
                    <h5 class="text-muted">No income records found</h5>
                    <p class="text-muted small">Start adding your earnings to see them here.</p>
                    <a href="/dashboard/setincome" class="btn btn-primary btn-sm mt-2">Add Income</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
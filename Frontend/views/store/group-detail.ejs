<%- include('../partials/mainhead') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<%- include('../partials/navbar') %>

<div class="container py-4 py-sm-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-11 col-lg-10">
      
      <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-purple text-white d-flex justify-content-between align-items-center py-3">
          <div>
            <h2 class="mb-0 fs-3"><%= group.name %></h2>
            <span class="badge bg-light text-purple mt-2"><%= group.type %></span>
          </div>
          <div>
             <a href="/dashboard/group-history" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left"></i> Back
             </a>
          </div>
        </div>
      </div>

      <% if (expenses && expenses.length > 0) { %>
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <small class="text-muted text-uppercase fw-bold">Total Spent</small>
                        <h3 class="text-success mt-2">Rs. <%= expenses.reduce((sum, e) => sum + e.amount, 0).toFixed(2) %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <small class="text-muted text-uppercase fw-bold">Number of Expenses</small>
                        <h3 class="text-info mt-2"><%= expenses.length %></h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <small class="text-muted text-uppercase fw-bold">Average</small>
                        <h3 class="text-warning mt-2">
                           <% const total = expenses.reduce((sum, e) => sum + e.amount, 0); %>
                           Rs. <%= (total / expenses.length).toFixed(2) %>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
       <% } %>

      <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
          <h5 class="mb-0 text-secondary">
            <i class="fas fa-receipt me-2"></i>Expenses
          </h5>
          
          <a href="/dashboard/splits?prefillGroup=<%= group._id %>" class="btn btn-primary btn-sm">
             <i class="fas fa-plus"></i> Add Expense
          </a>
        </div>

        <div class="card-body p-0">
          <% if (expenses && expenses.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                  <tr>
                    <th class="ps-4">Description</th>
                    <th>Date</th>
                    <th class="text-end">Total Amount</th>
                    <th class="text-center">Paid By</th>
                    <th class="text-center">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% expenses.forEach((expense, index) => { %>
                    <tr>
                      <td class="ps-4 fw-bold text-dark">
                        <%= expense.description %>
                      </td>
                      <td class="text-muted small">
                        <%= new Date(expense.date).toLocaleDateString() %>
                      </td>
                      <td class="text-end fw-bold text-success">
                        Rs. <%= expense.amount.toFixed(2) %>
                      </td>
                      <td class="text-center">
                        <% if (expense.paidBy.toString() === user._id.toString()) { %>
                            <span class="badge bg-purple-light text-purple" style="background-color: #e9ecef; color: #6f42c1;">You</span>
                        <% } else { %>
                            <span class="badge bg-light text-dark">Member</span>
                        <% } %>
                      </td>
                      <td class="text-center">
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#expenseModal<%= index %>" title="View Details">
                                <i class="fas fa-eye"></i>
                            </button>
                            <a href="/dashboard/download/expense/<%= expense._id %>" class="btn btn-sm btn-outline-primary" title="Download PDF">
                                <i class="fas fa-file-pdf"></i>
                            </a>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
             <div class="text-center py-5">
                <h6 class="text-muted">No expenses yet</h6>
                <a href="/dashboard/splits?prefillGroup=<%= group._id %>" class="btn btn-outline-primary btn-sm mt-2">
                    Add Expense
                </a>
             </div>
          <% } %>
        </div>
      </div>
      
    </div>
  </div>
</div>

<% if (expenses && expenses.length > 0) { %>
  <% expenses.forEach((expense, index) => { %>
    <div class="modal fade" id="expenseModal<%= index %>" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header bg-purple text-white">
            <h5 class="modal-title"><%= expense.description %></h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="row mb-3">
              <div class="col-md-6">
                <p class="mb-1"><strong>Total Amount:</strong></p>
                <h4 class="text-success">Rs. <%= expense.amount.toFixed(2) %></h4>
              </div>
              <div class="col-md-6">
                <p class="mb-1"><strong>Split Method:</strong></p>
                <h4 class="text-info"><%= expense.splitMethod.charAt(0).toUpperCase() + expense.splitMethod.slice(1) %></h4>
              </div>
            </div>
            <hr>
            <div class="table-responsive">
              <table class="table table-sm table-bordered">
                <thead class="table-light">
                  <tr>
                    <th>Name</th>
                    <th>Contact</th>
                    <th class="text-center">Share</th>
                    <th class="text-end">Amount Owed</th>
                  </tr>
                </thead>
                <tbody>
                  <% expense.splitters.forEach((splitter, sIndex) => { %>
                    <tr class="<%= sIndex === 0 ? 'table-warning' : '' %>">
                      <td>
                        <strong><%= splitter.name %></strong>
                        <% if (sIndex === 0) { %>
                          <span class="badge bg-warning text-dark ms-2">Paid</span>
                        <% } %>
                      </td>
                      <td><small class="text-muted"><%= splitter.contact || "N/A" %></small></td>
                      <td class="text-center">
                        <% if (expense.splitMethod === 'percentage') { %>
                          <%= splitter.splitValue %>%
                        <% } else { %>
                           1.00
                        <% } %>
                      </td>
                      <td class="text-end">
                        <strong>Rs. <%= parseFloat(splitter.amountOwned || 0).toFixed(2) %></strong>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <a href="/dashboard/download/expense/<%= expense._id %>" class="btn btn-primary">
              <i class="fas fa-download"></i> Download PDF
            </a>
          </div>
        </div>
      </div>
    </div>
  <% }); %>
<% } %>

<%- include('../partials/footer') %>